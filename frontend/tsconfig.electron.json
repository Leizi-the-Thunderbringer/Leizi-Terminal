{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist-electron",
    "rootDir": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "src", "dist", "dist-electron"]
}
