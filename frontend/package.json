{
  "name": "leizi-terminal",
  "private": true,
  "version": "0.1.0",
  "description": "A modern terminal tool supporting SSH, Telnet, and Serial connections",
  "author": "Leizi-the-Thunderbringer",
  "license": "MIT",
  "homepage": "https://github.com/Leizi-the-Thunderbringer/Leizi-Terminal#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leizi-the-Thunderbringer/Leizi-Terminal.git"
  },
  "bugs": {
    "url": "https://github.com/Leizi-the-Thunderbringer/Leizi-Terminal/issues"
  },
  "keywords": [
    "terminal",
    "ssh",
    "telnet",
    "serial",
    "electron",
    "react",
    "python"
  ],
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start:backend": "cd .. && python -m uvicorn main:app --reload",
    "start:frontend": "vite --host",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "electron:compile": "rimraf dist-electron && tsc -p tsconfig.electron.json",
    "electron:dev": "npm run electron:compile && cross-env NODE_ENV=development DEBUG=true concurrently \"npm run start\" \"npx electron .\"",
    "electron:build": "npm run build && electron-builder",
    "clean": "rimraf dist dist-electron",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/addon-web-links": "^0.10.0",
    "@xterm/xterm": "^5.3.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "jsdom": "^22.1.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.0.2",
    "vite": "^4.4.9",
    "wait-on": "^7.2.0",
    "vitest": "^0.34.3"
  },
  "build": {
    "appId": "com.leiziterminal.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}
