{
  "name": "leizi-terminal",
  "private": true,
  "version": "0.1.0",
  "description": "A modern terminal tool supporting SSH, Telnet, and Serial connections",
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/leizi-terminal#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/leizi-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/leizi-terminal/issues"
  },
  "keywords": [
    "terminal",
    "ssh",
    "telnet",
    "serial",
    "electron",
    "react",
    "python"
  ],
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start:backend": "cd .. && python -m uvicorn main:app --reload",
    "start:frontend": "vite --host",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "electron:compile": "rimraf dist-electron && tsc -p tsconfig.electron.json",
    "electron:dev": "npm run electron:compile && cross-env NODE_ENV=development DEBUG=true concurrently \"npm run start\" \"npx electron .\"",
    "electron:build": "npm run build && electron-builder",
    "clean": "rimraf dist dist-electron",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "@xterm/addon-fit": "^0.9.0",
    "@xterm/addon-web-links": "^0.10.0",
    "@xterm/xterm": "^5.3.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "rimraf": "^5.0.10",
    "typescript": "^5.0.2",
    "vite": "^4.4.9",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.leizi.terminal",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}
